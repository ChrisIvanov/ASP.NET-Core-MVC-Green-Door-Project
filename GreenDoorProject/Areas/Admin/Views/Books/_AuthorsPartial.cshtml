@model IEnumerable<AuthorDetailsViewModel>

@{
    var i = 1;
}

<div class="jumbotron">
    <div class="row col-md-12">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" class="col col-md-9">Author Name</th>
                    <th scope="col" class="col col-md-1">Details</th>
                    <th scope="col" class="col col-md-1">Edit</th>
                    <th scope="col" class="col col-md-1">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@author.FullName</td>
                        <td><a asp-area="" asp-controller="Books" asp-action="AuthorDetails" asp-route-id="@author.Id" class="btn btn-primary">Details</a></td>
                        <td><a asp-area="Admin" asp-controller="Books" asp-action="EditAuthor" asp-route-id="@author.Id" class="btn btn-warning">Edit</a></td>
                        <td><a asp-area="Admin" asp-controller="Books" asp-action="DeleteAuthor" asp-route-id="@author.Id" class="btn btn-danger">Delete</a></td>
                    </tr>

                    i++;
                }
            </tbody>
        </table>
    </div>
</div>
