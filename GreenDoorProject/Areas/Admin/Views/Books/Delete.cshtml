@model BookServiceModel

<div class="container">
    <div class="jumbotron">
        <div class="row col col-md-12 text-center">
            <h5>Are you sure you want to remove @Model.BookTitle from the database?</h5><br />
        </div>
        <div class="row col col-md-12">
            <a asp-area="Admin" asp-controller="Cinema" asp-action="Index" class="btn btn-primary">No</a>
            <a asp-area="Admin" asp-controller="Cinema" asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">Yes</a>
        </div>
    </div>
</div>
