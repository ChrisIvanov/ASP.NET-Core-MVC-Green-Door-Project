@model AuthorDetailsViewModel

@inject SignInManager<Guest> SignInManager

@{
}

<div class="container">
    <div class="jumbotron">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="row">
                <div class="col col-lg-6">
                    <img src="@Model.ImagePath" alt="@Model.FullName poster" width="400" height="400" />
                </div>

                <div class="col col-lg-6">
                    <div class="row"><h5>Full name: @Model.FullName</h5></div>
                    <div class="row"><h5>Year Of Birth: @Model.YearOfBirth</h5></div>
                    <div class="row"><h5>Year Of Death: @(Model.YearOfDeath == null ? "Still Alive" : Model.YearOfDeath)</h5></div>
                    <div class="row">
                        <h5>Books: @String.Join(',', Model.AuthorBooks.Take(3))</h5>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col col-lg-12">
                    <h4>Description:</h4>
                    <h6>@Model.Details</h6> <br />
                </div>
            </div>
        }
    </div>
</div>

