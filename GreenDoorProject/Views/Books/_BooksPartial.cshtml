@model IEnumerable<BookServiceModel>

<div class="jumbotron">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <div class="card border border-info">
                    <img class="card-img-top" src="@book.ImagePath" alt="@book.BookTitle by @book.AuthorFirstName @book.AuthorLastName" width="250" height="300" />
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">@book.BookTitle</h5>
                        <h5 class="card-body text-center">@book.AuthorFirstName @book.AuthorLastName</h5>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">Details</a>

                        @if (User.IsAdmin())
                        {
                            <a asp-area="Admin" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-danger">Edit</a>
                            <a asp-area="Admin" asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-warning">Delete</a>
                        }

                    </div>
                </div>
            </div>
        }
    </div>
</div>
