@model IEnumerable<MusicServiceModel>


<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-md-3">
            <div class="card border border-info">
                <img class="card-img-top" src="@album.ImagePath" alt="@album.AlbumTitle by @album.Artist" width="250" height="300" />
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@album.AlbumTitle</h5>
                    <h5 class="card-body text-center">@album.Artist</h5>
                    <div class="row justify-content-center">
                        <a asp-area="" asp-controller="Music" asp-action="PlayMusic" class="btn btn-primary">Play album</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>